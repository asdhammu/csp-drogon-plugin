<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>CSPDrogonPlugin</id>

    <!-- Public plugin name should be written in
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Csp Drogon</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="asdhammu@pm.me" url="https://asdhammu.com">Amandeep Dhammu</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>
        <![CDATA[
            This plugin supports the CSP syntax for the DROGON framework
            <ul>
                <li>HTML parsing and syntax highlighting</li>
                <li>C++ parsing</li>
            </ul>
        ]]>
    </description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.xml</depends>


    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

        <lang.ast.factory language="CSPDrogon" implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonASTFactory"/>
        <multiHostInjector implementation="com.asdhammu.cspdrogon.language.psi.CSPCppInjector"/>

        <psi.referenceContributor
                language="CSPDrogon"
                implementation="com.asdhammu.cspdrogon.language.psi.CSPDrogonFileReferenceContributor"/>

        <codeInsight.lineMarkerProvider
                language="CSPDrogon"
                implementationClass="com.asdhammu.cspdrogon.language.psi.CSPDrogonViewLineMarkerProvider"
        />

        <fileType name="CSP Drogon"
                  implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonFileType"
                  fileNames="INSTANCE"
                  language="CSPDrogon"
                  extensions="csp"/>

        <lang.fileViewProviderFactory
                language="CSPDrogon"
                implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonFileViewProviderFactory"/>

        <lang.parserDefinition
                language="CSPDrogon"
                implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonParserDefinition"/>

        <colorSettingsPage implementation="com.asdhammu.cspdrogon.language.CSPDrogonColorSettingsPage"/>
        <lang.syntaxHighlighterFactory
                language="CSPDrogon"
                implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonSyntaxHighlighterFactory"/>

        <editorHighlighterProvider
                filetype="CSP Drogon"
                implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonEditorHighlighterProvider"/>

    </extensions>
</idea-plugin>