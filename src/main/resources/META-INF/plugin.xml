<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>CSPDrogonPlugin</id>

    <!-- Public plugin name should be written in
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Csp Drogon</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="asdhammu@pm.me" url="https://asdhammu.com">Amandeep</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>
        <![CDATA[
            <ul>
                <li>CSP Drogon Plugin</li>
                <li>Plugin to parse csp directive and variables</li>
            </ul>
        ]]>
    </description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

        <!--<lang.elementManipulator order="first"
                forClass="com.asdhammu.cspdrogon.language.psi.impl.CSPDrogonASTFactory$CSPDrogonCommentImpl"
                implementationClass="com.asdhammu.cspdrogon.editor.ExtendedPsiCommentManipulator"/>-->
        <!-- File Type-->
        <fileType name="CSP Drogon" implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonFileType"
                  fileNames="INSTANCE" language="CSPDrogon" extensions="csp"/>

        <!--<fileType.fileViewProviderFactory implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonFileViewProviderFactory"
                                          filetype="csp"/>-->
        <annotator language="CSPDrogon" implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonAnnotator"/>
        <lang.parserDefinition language="CSPDrogon"
                               implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonParserDefinition"/>
        <lang.syntaxHighlighter language="CSPDrogon"
                                implementationClass="com.asdhammu.cspdrogon.language.CSPDrogonHighlighter"/>

        <!-- Completion contributor -->
        <!--<completion.contributor language="CSPDrogon" implementationClass="com.asdhammu.cspdrogon.CSPDrogonCompletionContributor"/>-->

    </extensions>
</idea-plugin>